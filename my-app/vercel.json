{
    "version": 2,
    "buildCommand": "next build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "routes": [
      {
        "src": "/_next/static/(.*)",
        "headers": { "cache-control": "public,max-age=31536000,immutable" },
        "continue": true
      },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/" }
    ],
    "env": {
      "NEXT_PUBLIC_API_URL": "https://tu-backend-desplegado.com/api"
    }
  }